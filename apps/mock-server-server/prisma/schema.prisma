datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model MockResponse {
  apiPath     String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(uuid())
  mockData    Json?
  name        String?
  title       String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  mockResponses MockResponse[]
  password      String
  roles         Json
  updatedAt     DateTime       @updatedAt
  username      String         @unique
}
